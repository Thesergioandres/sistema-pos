generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Nuevo concepto central: Negocio (multi-tenant)
model Negocio {
  id          Int         @id @default(autoincrement())
  nombre      String
  descripcion String?
  creadoEn    DateTime    @default(now())
  propietarios NegocioPropietario[]
  sucursales   Sucursal[]
}

// Propietarios de cada negocio (uno o varios)
model NegocioPropietario {
  id         Int      @id @default(autoincrement())
  negocio    Negocio  @relation(fields: [negocioId], references: [id], onDelete: Cascade)
  negocioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId  Int
  creadoEn   DateTime @default(now())

  @@unique([negocioId, usuarioId])
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nombre    String
  rol       String
  // Permisos granulares por áreas de la app (clave/valor)
  permisos  Json?
  sucursalId Int?
  sucursal   Sucursal? @relation(fields: [sucursalId], references: [id])
  ventas    Venta[]
  activeSession ActiveSession?
  // Negocios donde es propietario
  negociosPropietario NegocioPropietario[]
}

model Insumo {
  id        Int      @id @default(autoincrement())
  nombre    String
  stock     Float
  unidad    String
  proveedor String?
  stockMinimo Float @default(4)
  recetas   Receta[]
  // Pertenencia a una sucursal (inventario por sucursal)
  sucursal   Sucursal? @relation(fields: [sucursalId], references: [id])
  sucursalId Int?
}

model Producto {
  id        Int      @id @default(autoincrement())
  nombre    String
  tamanio   String
  precio    Float @default(0)
  recetas   Receta[]
  ventas    VentaProducto[]
  combos    ComboProducto[]
  // Pertenencia a una sucursal (catálogo por sucursal)
  sucursal   Sucursal? @relation(fields: [sucursalId], references: [id])
  sucursalId Int?
}

model Receta {
  id         Int      @id @default(autoincrement())
  producto   Producto @relation(fields: [productoId], references: [id])
  productoId Int
  insumo     Insumo   @relation(fields: [insumoId], references: [id])
  insumoId   Int
  cantidad   Float
}

model Venta {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  sucursalId Int?
  sucursal   Sucursal? @relation(fields: [sucursalId], references: [id])
  clienteId Int?
  cliente   Cliente? @relation(fields: [clienteId], references: [id])
  productos VentaProducto[]
  pagos     VentaPago[]
  total     Float
  medioPago String
  montoRecibido Float?
  cambio    Float?
  estado    String   @default("pendiente") // pendiente | pagada
}

model VentaPago {
  id        Int      @id @default(autoincrement())
  venta     Venta    @relation(fields: [ventaId], references: [id], onDelete: Cascade)
  ventaId   Int
  tipo      String   // efectivo, tarjeta, transferencia, etc.
  monto     Float
  // Permite asociar un pago a un producto específico para soportar abonos parciales
  ventaProducto   VentaProducto? @relation("PagoPorProducto", fields: [ventaProductoId], references: [id])
  ventaProductoId Int?
}

model VentaProducto {
  id         Int      @id @default(autoincrement())
  venta      Venta    @relation(fields: [ventaId], references: [id], onDelete: Cascade)
  ventaId    Int
  producto   Producto @relation(fields: [productoId], references: [id])
  productoId Int
  cantidad   Int
  subtotal   Float
  pagos      VentaPago[] @relation("PagoPorProducto")
}
